
@{
    ViewBag.Title = "detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    img {
        vertical-align: middle;
    }

    /* Position the image container (needed to position the left and right arrows) */
    .container {
        position: relative;
    }

    /* Hide the images by default */
    .mySlides {
        display: none;
    }

    /* Add a pointer when hovering over the thumbnail images */
    .cursor {
        cursor: pointer;
    }

    /* Next & previous buttons */
    .prev,
    .next {
        cursor: pointer;
        position: absolute;
        top: 40%;
        width: auto;
        padding: 16px;
        margin-top: -50px;
        color: white;
        font-weight: bold;
        font-size: 20px;
        border-radius: 0 3px 3px 0;
        user-select: none;
        -webkit-user-select: none;
    }

    /* Position the "next button" to the right */
    .next {
        right: 0;
        border-radius: 3px 0 0 3px;
    }

        /* On hover, add a black background color with a little bit see-through */
        .prev:hover,
        .next:hover {
            background-color: rgba(0, 0, 0, 0.8);
        }

    /* Number text (1/3 etc) */
    .numbertext {
        color: #f2f2f2;
        font-size: 12px;
        padding: 8px 12px;
        position: absolute;
        top: 0;
    }

    /* Container for image text */
    .caption-container {
        text-align: center;
        background-color: #222;
        padding: 2px 16px;
        color: white;
    }

    .row:after {
        content: "";
        display: table;
        clear: both;
    }

    /* Six columns side by side */
    .column {
        float: left;
        width: 16.66%;
    }

    /* Add a transparency effect for thumnbail images */
    .demo {
        opacity: 0.6;
    }

        .active,
        .demo:hover {
            opacity: 1;
        }
    .price {
        color: red;
    }

    .describe h5 {
        font-weight: 600;
    }

    .bold {
        font-weight: 600;
    }

    .titleProduct {
        font-size: 19px;
    }

    .itemProduct {
        margin-top: 10px;
    }

        .itemProduct img {
            width: 100%;
            height: auto;
        }

        .itemProduct h3 {
            color: black;
            font-size: 15px;
        }

            .itemProduct h3:hover {
                color: orange;
            }

    a {
        text-decoration: none !important;
    }
</style>
<div class="row">
    <form method="post" action="#">

        <div class="col-md-6">
            <div class="container" style="width:100%;">
                
                @foreach (var item in ViewBag.listGallery)
                    {
                            int i = 1;
                            <div class="mySlides">
                                <div class="numbertext"> @i </div>
                                <img class="img-responsive" src="@item.Photo" style=" width: 100%; max-height: 200px; width: auto;">
                            </div>
                            i++;
                }


               
                <a class="prev" onclick="plusSlides(-1)">❮</a>
                <a class="next" onclick="plusSlides(1)">❯</a>

                <div class="row" style="margin: 25px;">




                </div>
            </div>

        </div>
        <div class="col-md-6">
            <h3 class="titleProduct bold">@ViewBag.sp.ProductName</h3>
            <p class="price bold">@ViewBag.sp.Price $</p>
            <div style="padding:6px;margin-top:10px;" class="size">
                <input style="padding:5px;" type="number" name="SoLuong" min="1" value="1" />

            </div>

            <div style="margin-top:10px;">
                <input type="submit" value="Thêm vào giỏ hàng" class="btn btn-warning">
                <a href="/home/index" class="btn btn-info">Tiếp tục mua</a>
            </div>
            <div class="describe">
                <h5>Mô tả</h5>
                <p>
                    @ViewBag.sp.Unit
                </p>
                @if (@ViewBag.listAttribute != null)
                {
                    foreach (var item in ViewBag.listAttribute)
                    {
                        <p>
                            <b>@item.AttributeName:</b> @item.AttributeValue
                        </p>
                    }
                }
    
            </div>
        </div>
    </form>

</div>
<hr />
<script>
    var slideIndex = 1;
    showSlides(slideIndex);

    function plusSlides(n) {
        showSlides(slideIndex += n);
    }

    function currentSlide(n) {
        showSlides(slideIndex = n);
    }

    function showSlides(n) {
        var i;
        var slides = document.getElementsByClassName("mySlides");
        var dots = document.getElementsByClassName("demo");
        var captionText = document.getElementById("caption");
        if (n > slides.length) { slideIndex = 1 }
        if (n < 1) { slideIndex = slides.length }
        for (i = 0; i < slides.length; i++) {
            slides[i].style.display = "none";
        }
        for (i = 0; i < dots.length; i++) {
            dots[i].className = dots[i].className.replace(" active", "");
        }
        slides[slideIndex - 1].style.display = "block";
        dots[slideIndex - 1].className += " active";
        captionText.innerHTML = dots[slideIndex - 1].alt;
    }
</script>

