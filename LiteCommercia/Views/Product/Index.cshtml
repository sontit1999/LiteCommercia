
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<style>
    .title_cagetory {
        color: black;
        font-family: 'Adobe Devanagari';
        display: inline-block;
        text-align: center;
        font-size: 35px;
        margin: 0 auto;
    }

        .title_cagetory:hover {
            color: orange;
        }

    .itemProduct {
        box-sizing: border-box;
        padding: 20px;
    }

        .itemProduct img {
            width: 100%;
            height: auto;
        }

        .itemProduct h3 {
            color: black;
            font-size: 15px;
        }

            .itemProduct h3:hover {
                color: orange;
            }

    a {
        text-decoration: none !important;
    }
</style>
<h2>Danh sách sản phẩm</h2>
<div class="row newproduct">
    @foreach (var item in @ViewBag.listSP)
    {
        <div class="col-md-3 itemProduct">
            <a style="text-decoration:none;" href="/Product/detail?id=@item.ProductID">
                <img src="@item.Photo" />
                <h3>
                    @item.ProductName
                </h3>
            </a>

            <p>@item.Price $</p>
        </div>
    }
</div>
<div class="w3-bar text-center">
    @for (int i = 1; i < @ViewBag.numberPage; i++)
    {
        <a href="/Product/index?page=@i" class="w3-button">@i</a>
    }

</div>


